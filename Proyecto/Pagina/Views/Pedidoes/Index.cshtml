@model IEnumerable<Pagina.Models.Pedido>

@{
    ViewBag.Title = "CRUD";
}

<h2 class="titulo subtitulo">Pedidos!</h2>

<p>
    @Html.ActionLink("Nuevo...", "Create", null, new { @class = "anadir" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "boton-tabla" })
            @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "boton-tabla" })
            @Html.ActionLink("Borrar", "Delete", new { id = item.ID }, new { @class = "boton-tabla" })
        </td>
    </tr>
}

</table>
