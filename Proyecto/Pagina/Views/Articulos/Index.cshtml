@model IEnumerable<Pagina.Models.Producto>

@{
    ViewBag.Title = "Articulos";
}

<link href="~/Content/articles.css" rel="stylesheet" />
<link href="~/Content/sb-admin-2.min.css" rel="stylesheet">

<section>
    <br /><br /><br />
    <div class="container">
        <div class="row">
            <div class="mx-auto">
                <div class="col-lg-12">
                    <h1 class="display-2 heading-big heading-big-square text-center">Articulos</h1>
                </div>
            </div>
        </div>
    </div>
    <br /><br /><br /><br /><br /><br />
    <div class="container">
        <div class="row">
            <div class="mx-auto">
                <div class="col-lg-12">
                    <div class="text-center my-3">
                        <div class="card-deck no-gutters">

                            @{
                                int row = 0;
                            }

                            @foreach (var item in Model)
                            {
                                <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                                    <div class="card h-100 mb-5">
                                        <div class="card-header">
                                            <h5 class="card-title m-0 p-0 font-weight-bolder text-secondary">@item.Nombre</h5>
                                        </div>
                                        <div class="card-body text-left">
                                            <img src="~/Upload/Productoes/@item.Imagen" width="200" height="200" />
                                            <br />
                                            <p class="card-text">@item.Descripcion </p>
                                            <span class="font-lead-base font-weight-bold text-muted">De @Html.DisplayFor(modelItem => item.Gema.Nombre)</span>
                                            <div class="promotion-price">
                                                <div class="promotion-price-desc">En</div>
                                                <div class="promotion-price-text">$ @item.Precio</div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <a href="@Url.Action("Index","Order", new { id = item.ID })" class="btn btn-warning">Ver más</a>
                                        </div>
                                    </div>
                                </div>

                                row++;

                                if (row > 3)
                                {
                                    <div class="col-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom:125px;"></div>
                                    row = 0;
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


